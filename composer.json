{
    "name": "getpop/hooks-wp",
    "type": "library",
    "description": "WordPress implementation of the contracts to implement hooks (filters and actions) for PoP",
    "keywords": [
        "PoP",
        "hooks",
        "WordPress"
    ],
    "homepage": "https://github.com/getpop/hooks-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "provide": {
        "getpop/hooks-contracts-implementation": "~0.1"
    },
    "require": {
        "php": "~7.1",
        "getpop/hooks": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.2",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^0.6.2"
    },
    "autoload": {
        "psr-4": {
            "PoP\\HooksWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\HooksWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist --memory-limit 256K"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
